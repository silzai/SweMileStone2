<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterUserController">
   <children>
      <Pane prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label layoutX="52.0" layoutY="71.0" text="Please enter your details, and the system will generate a login username and password:" />
            <Label layoutX="52.0" layoutY="108.0" text="First Name:" />
            <Label layoutX="52.0" layoutY="145.0" text="Last Name:" />
            <Label layoutX="52.0" layoutY="183.0" text="ID:" />
            <Label fx:id="credentialsLabel" layoutX="52.0" layoutY="301.0" text="Your login credentials will appear here" />
            <Button fx:id="registerButton" layoutX="52.0" layoutY="228.0" mnemonicParsing="false" onAction="#onButtonPressedRegister" text="Register" />
            <TextField fx:id="firstNameTextField" layoutX="133.0" layoutY="104.0" />
            <TextField fx:id="lastNameTextField" layoutX="133.0" layoutY="141.0" />
            <TextField fx:id="idTextField" layoutX="133.0" layoutY="179.0" />
            <Button fx:id="backButton" layoutX="55.0" layoutY="361.0" mnemonicParsing="false" onAction="#onButtonPressedBack" text="Back" />
         </children>
      </Pane>
   </children>
</AnchorPane>
