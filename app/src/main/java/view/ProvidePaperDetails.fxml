<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProvidePaperDetailsController">
   <children>
      <Pane prefHeight="400.0" prefWidth="600.0">
         <children>
            <Button fx:id="backButton" layoutX="14.0" layoutY="361.0" mnemonicParsing="false" onAction="#onButtonPressedBack" text="Back" />
            <Button fx:id="nextButton" layoutX="545.0" layoutY="361.0" mnemonicParsing="false" onAction="#onButtonPressedNext" text="Next" />
            <Label layoutX="54.0" layoutY="34.0" text="Please provide the paper details of the paper that you want to submit:" />
            <Label layoutX="54.0" layoutY="69.0" text="Paper Title:" />
            <Label layoutX="54.0" layoutY="102.0" text="List of Authors (enter values as csv): " />
            <Label layoutX="54.0" layoutY="133.0" text="Keywords (enter values as csv) :" />
            <Label layoutX="88.0" layoutY="211.0" text="Paper Abstract:" />
            <TextField fx:id="paperTitleTextField" layoutX="253.0" layoutY="65.0" />
            <TextField fx:id="keywordsTextField" layoutX="253.0" layoutY="129.0" />
            <TextArea fx:id="paperAbstractTextArea" layoutX="253.0" layoutY="164.0" prefHeight="144.0" prefWidth="162.0" />
            <TextField fx:id="listAuthorsTextField" layoutX="253.0" layoutY="98.0" />
            <Button fx:id="saveButton" layoutX="424.0" layoutY="361.0" mnemonicParsing="false" onAction="#onButtonPressedSave" text="Save" />
            <Label layoutX="251.0" layoutY="365.0" text="Click here to save paper details:" />
            <Label fx:id="paperNumberLabel" layoutX="219.0" layoutY="325.0" prefHeight="17.0" prefWidth="370.0" text="(Generated paper number will appear here)" textFill="RED" />
         </children>
      </Pane>
   </children>
</AnchorPane>
