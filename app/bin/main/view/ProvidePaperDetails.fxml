            <Label layoutX="54.0" layoutY="274.0" text="Paper Abstract:" />
            <TextField fx:id="paperTitleTextField" layoutX="253.0" layoutY="107.0" />
            <TextField fx:id="keywordsTextField" layoutX="253.0" layoutY="171.0" />
            <TextArea fx:id="paperAbstractTextArea" layoutX="253.0" layoutY="210.0" prefHeight="144.0" prefWidth="162.0" />
            <TextField fx:id="listAuthorsTextField" layoutX="253.0" layoutY="140.0" />
            <Button fx:id="saveButton" layoutX="424.0" layoutY="361.0" mnemonicParsing="false" onAction="#onButtonPressedSave" text="Save" />
