<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="289.0" prefWidth="555.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SelectConferenceController">
   <children>
      <BorderPane prefHeight="314.0" prefWidth="562.0">
         <center>
            <TableView fx:id="conferencesTable" prefHeight="237.0" prefWidth="562.0" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
                <TableColumn fx:id="conferenceDateColumn" prefWidth="115.20001220703125" text="Conference Date" />
                  <TableColumn fx:id="submissionDateColumn" prefWidth="150.3999786376953" text="Paper Submission Date" />
                  <TableColumn fx:id="venueColumn" prefWidth="80.800048828125" text="Venue" />
                  <TableColumn fx:id="reviewersColumn" prefWidth="79.99993896484375" text="Reviewers" />
              </columns>
            </TableView>
         </center>
         <bottom>
            <VBox alignment="CENTER" prefHeight="78.0" prefWidth="562.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="selectConferenceLabel" text="Select a Conference to submit papers to, then press Save to record the selection, then press Next" />
                  <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onButtonPressedSave" text="Save" />
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="nextButton" mnemonicParsing="false" onAction="#onButtonPressedNext" text="Next" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
